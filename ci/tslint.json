{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "mapCoverage": true,
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "ordered-imports": [
      false
    ],
    "max-line-length": [
      true,
      200
    ],
    "member-ordering": [
      false
    ],
    "interface-name": [
      false
    ],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "no-var-keyword": true,
    "no-console": [
      false,
      "log",
      "error"
    ]
  },
  "env": {
    "amd": true,
    "node": true
  }
}